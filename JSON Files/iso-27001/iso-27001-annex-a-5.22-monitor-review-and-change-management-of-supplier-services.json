  "common_mistakes": {
    "description": "Top 3 mistakes organizations make with supplier monitoring",
    "mistakes": [
      {
        "rank": 1,
        "mistake": "Do not monitor suppliers",
        "description": "No monitoring, reviews, or oversight of suppliers after contract execution",
        "root_cause": [
          "Assumption suppliers will maintain standards",
          "Resource constraints",
          "Focus on new suppliers rather than existing",
          "No process for ongoing monitoring"
        ],
        "impact": "Non-compliance not detected, security issues not identified, service degradation not noticed",
        "prevention": "Establish monitoring process and assign responsibility",
        "evidence_needed": "Be able to demonstrate monitoring activities (meetings, reports, dashboards)",
        "audit_risk": "High - auditors will ask to see evidence of monitoring"
      },
      {
        "rank": 2,
        "mistake": "No assurance supplier maintains information security",
        "description": "No verification that supplier continues to maintain security",
        "root_cause": [
          "Initial assessment done but no ongoing verification",
          "Assumption previous certification remains valid",
          "No annual review process",
          "No incident tracking"
        ],
        "evidence_needed": "Current certification (ISO 27001, etc.) or recent security assessment",
        "action": "Request annual compliance updates from suppliers",
        "certification": "Ensure certifications are in date and cover services being used"
      },
      {
        "rank": 3,
        "mistake": "Document and version control is wrong",
        "description": "Poor documentation of monitoring activities",
        "issues": [
          "No records of monitoring activities",
          "No meeting notes from reviews",
          "Incidents not tracked or documented",
          "Changes not documented",
          "Supplier Register not updated"
        ],
        "prevention": [
          "Document all monitoring activities",
          "Maintain meeting notes",
          "Track incidents in log",
          "Record changes and approvals",
          "Keep Supplier Register current"
        ]
      }
    ]
  },
  "audit_requirements": {
    "description": "What auditors will check during ISO 27001 A 5.22 audit",
    "audit_areas": [
      {
        "area": "1. Supplier Monitoring Evidence",
        "description": "Verify monitoring activities are occurring and documented",
        "checks": [
          "Monitoring process documented",
          "Responsibility assigned",
          "Performance reports or metrics reviewed",
          "Evidence of regular reviews or meetings",
          "Dashboards or reports showing monitoring",
          "Changes tracked and documented"
        ],
        "easiest_win": "Request evidence of supplier monitoring - if none exists, immediate finding"
      },
      {
        "area": "2. Service Review Meetings",
        "description": "Verify regular meetings with suppliers",
        "checks": [
          "Meeting schedule exists",
          "Regular meetings occur (quarterly/semi-annually)",
          "Meeting notes maintained",
          "Topics covered documented",
          "Action items tracked to completion",
          "Attendance recorded"
        ],
        "requirement": "At minimum, auditor will ask for evidence of recent supplier meetings"
      },
      {
        "area": "3. Incident and Issue Management",
        "description": "Verify incidents are tracked and managed",
        "checks": [
          "Incident tracking log maintained",
          "Incidents documented with details",
          "Response actions taken",
          "Root cause analysis conducted",
          "Resolution tracked",
          "Lessons learned captured"
        ]
      },
      {
        "area": "4. Change Management",
        "description": "Verify changes are managed appropriately",
        "checks": [
          "Supplier changes identified",
          "Changes evaluated for impact",
          "Security implications assessed",
          "Approvals documented",
          "Implementation tracked",
          "Testing completed where needed"
        ]
      },
      {
        "area": "5. Security Compliance Verification",
        "description": "Verify supplier security is evaluated regularly",
        "checks": [
          "Certifications verified annually",
          "Security assessments current",
          "Compliance with agreement terms verified",
          "Controls validated",
          "Vulnerabilities tracked"
        ],
        "frequency": "At least annually for all suppliers"
      },
      {
        "area": "6. Supplier Register and Documentation",
        "description": "Verify monitoring records maintained",
        "checks": [
          "Supplier Register current",
          "Last review date recorded",
          "Compliance status documented",
          "Monitoring frequency met",
          "Audit trails complete"
        ]
      }
    ]
  },
