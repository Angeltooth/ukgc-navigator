  "control": {
    "control_id": "ISO_27001_A_7.14",
    "control_number": "A 7.14",
    "control_title": "Secure Disposal or Re-Use of Equipment",
    "control_type": "Preventive control",
    "control_purpose": "To prevent leakage of sensitive information from equipment being disposed of or reused",
    "control_objective": "Verify sensitive data and licensed software are removed or securely overwritten before equipment disposal or reuse"
  },
  "iso_27001_definition": {
    "official_text": "Items of equipment containing storage media should be verified to ensure that any sensitive data and licensed software has been removed or securely overwritten prior to disposal or re-use.",
    "key_requirements": [
      "Equipment containing storage media identified",
      "Sensitive data removal process established",
      "Secure data overwriting procedure",
      "Licensed software removal",
      "Verification of data removal",
      "Equipment reuse or disposal documented",
      "Certificates of destruction",
      "Asset tag and label removal",
      "Audit trail maintained"
    ]
  },
  "control_purpose_detail": {
    "purpose": "Preventive control preventing data leakage from discarded or reused equipment",
    "scope": [
      "Desktop computers",
      "Laptop computers",
      "Servers and storage systems",
      "Mobile devices",
      "Printers and multifunction devices",
      "USB drives and portable storage",
      "Network equipment",
      "Backup systems",
      "Any equipment with storage media"
    ],
    "key_outcome": "No sensitive data recoverable from disposed or reused equipment"
  },
