  "common_mistakes": {
    "description": "Top 3 mistakes organizations make with incident management",
    "mistakes": [
      {
        "rank": 1,
        "mistake": "Did not learn lessons from incidents",
        "description": "Incidents occur but no improvements made to prevent recurrence",
        "root_cause": [
          "No post-incident review process",
          "Focus on immediate response only",
          "No ownership of action items",
          "No tracking of improvements"
        ],
        "impact": "Repeated incidents, wasted resources, no security improvement",
        "prevention": "Implement formal lessons learned process",
        "evidence": "Document corrective actions and improvements made per incident",
        "audit_risk": "High - auditors specifically check for continuous improvement"
      },
      {
        "rank": 2,
        "mistake": "Did not tell people how to raise an incident",
        "description": "Personnel don't know how to report security incidents",
        "root_cause": [
          "No communication about incident procedures",
          "Procedures exist but not shared",
          "No training provided",
          "No regular reminders"
        ],
        "impact": "Incidents not reported, delays in detection and response",
        "prevention": "Communicate incident reporting procedures quarterly minimum",
        "evidence": "Auditor will ask random employees how to report incident",
        "audit_risk": "Critical - auditors specifically test this knowledge"
      },
      {
        "rank": 3,
        "mistake": "Document and version control is wrong",
        "description": "Poor documentation and maintenance of incident procedures",
        "issues": [
          "Procedures not documented",
          "Version numbers don't match",
          "Procedures not reviewed in 12 months",
          "Comments left in final documents",
          "Old versions still in use"
        ],
        "prevention": [
          "Document all procedures clearly",
          "Maintain version control",
          "Review annually",
          "Remove comments from final versions"
        ]
      }
    ]
  },
