    "control_id": "ISO_27001_A_5.24",
    "control_number": "A 5.24",
    "control_title": "Information Security Incident Management Planning and Preparation",
    "control_type": "Corrective control",
    "control_purpose": "To ensure quick, effective, consistent and orderly response to information security incidents, including communication on information security events",
    "control_objective": "Plan and prepare for managing information security incidents by defining, establishing and communicating incident management processes, roles and responsibilities"
  },
  "iso_27001_definition": {
    "official_text": "The organization should plan and prepare for managing information security incidents by defining, establishing and communicating information security incident management processes, roles and responsibilities.",
    "key_requirements": [
      "Incident management processes defined",
      "Incident management procedures established",
      "Roles and responsibilities defined",
      "Responsibilities communicated",
      "Personnel competency ensured",
      "Response capability ready",
      "Learning and improvement capability"
    ]
  },
  "incident_management_overview": {
    "definition": "Planning and preparation for identifying, responding to and learning from information security incidents",
    "purpose": "Ensure organization can detect, respond, and recover from security incidents effectively",
    "scope": [
      "Incident identification and detection",
      "Incident classification and prioritization",
      "Incident response and containment",
      "Investigation and analysis",
      "Communication and escalation",
      "Recovery and remediation",
      "Lessons learned and improvement"
    ],
    "key_principle": "Incidents will happen - focus on being prepared, responding effectively, and learning from them",
    "control_type": "Corrective - responds to incidents after they occur"
  },
  "implementation_requirements": [
    {
      "requirement_id": "A_5.24_REQ_1",
      "requirement": "Define Incident Management Roles and Responsibilities",
      "description": "Clearly define who is responsible for each incident management function",
      "details": {
        "roles": [
          "Incident manager/coordinator",
          "Technical incident responders",
          "Investigation team",
          "Communication lead",
          "Senior management escalation",
          "External escalation contacts",
          "Business continuity coordinator"
        ],
        "responsibilities": [
          "Who detects incidents",
          "Who triages incidents",
          "Who responds to incidents",
          "Who investigates incidents",
          "Who communicates internally",
          "Who communicates externally",
          "Who decides escalation",
          "Who coordinates recovery"
        ],
        "documentation": "Document all roles and responsibilities clearly"
      }
    },
    {
      "requirement_id": "A_5.24_REQ_2",
      "requirement": "Establish Incident Management Processes and Procedures",
      "description": "Define comprehensive processes for managing information security incidents",
      "details": {
        "process_areas": [
          "Evaluation - assess if incident is information security related",
          "Monitoring - detect, classify, analyze and report incidents",
          "Managing - respond, escalate, invoke crisis/continuity procedures",
          "Coordinating - manage internal and external resources",
          "Logging - document all incident activity",
          "Evidence handling - preserve evidence for investigation",
          "Root cause analysis - determine why incident occurred",
          "Lessons learned - improve to prevent recurrence"
        ],
        "scope": "Processes address full incident lifecycle from detection through learning"
      }
    },
    {
      "requirement_id": "A_5.24_REQ_3",
      "requirement": "Implement Priority Levels and Response Times",
      "description": "Define incident priority levels with corresponding response timeframes",
      "details": {
        "priority_levels": [
          {
            "level": "Critical",
            "criteria": "Affects core operations or customer data",
            "response_time": "Immediate (minutes)",
            "examples": "Ransomware, data breach, system outage"
          },
          {
            "level": "High",
            "criteria": "Significant security impact or data at risk",
            "response_time": "Within hours",
            "examples": "Unauthorized access, suspected intrusion"
          },
          {
            "level": "Medium",
            "criteria": "Moderate security concern",
            "response_time": "Within 1 business day",
            "examples": "Policy violation, security misconfiguration"
          },
          {
            "level": "Low",
            "criteria": "Minor security event",
            "response_time": "Within 3 business days",
            "examples": "Failed login attempts, minor alerts"
          }
        ],
        "escalation": "Define escalation criteria for moving between levels"
      }
    },
    {
      "requirement_id": "A_5.24_REQ_4",
      "requirement": "Define Incident Detection and Monitoring",
      "description": "Establish how incidents will be detected and monitored",
      "details": {
        "detection_methods": [
          "Automated monitoring systems and alerts",
          "User reporting and helpdesk",
          "System log analysis",
          "Security tool alerts",
          "External notification (e.g., breach notification)",
          "Third party notification"
        ],
        "monitoring": [
          "24/7 monitoring or defined monitoring windows",
          "Alert thresholds and triggers",
          "Log collection and analysis",
          "Event correlation",
          "Anomaly detection"
        ],
        "incident_classification": "Define what constitutes an incident vs. normal event"
      }
    },
    {
      "requirement_id": "A_5.24_REQ_5",
      "requirement": "Establish Incident Response Procedures",
      "description": "Define step-by-step procedures for responding to incidents",
      "details": {
        "response_steps": [
          "Acknowledge incident receipt",
          "Verify incident details",
          "Contain the incident to prevent spread",
          "Preserve evidence",
          "Isolate affected systems if needed",
          "Begin investigation",
          "Update status regularly",
          "Execute recovery procedures",
          "Verify recovery"
        ],
        "decision_points": [
          "Activate business continuity if needed",
          "Activate crisis management if needed",
          "Involve law enforcement if criminal",
          "Notify customers/regulators if data breach",
          "Engage external specialists if needed"
        ]
      }
    },
    {
      "requirement_id": "A_5.24_REQ_6",
      "requirement": "Implement Incident Communication Plan",
      "description": "Establish procedures for communicating about incidents",
      "details": {
        "internal_communication": [
          "How to report incident",
          "Who to report to",
          "What to report",
          "Status update frequency",
          "Escalation notification"
        ],
        "external_communication": [
          "Customer notification procedures",
          "Regulator notification (UKGC, ICO for breaches)",
          "Media/public communication",
          "Third party notification",
          "Timing and content of communications"
        ],
        "reporting_requirements": [
          "GDPR data breach notification (72 hours)",
          "UKGC incident reporting",
          "Customer notification requirements",
          "Law enforcement reporting"
        ]
      }
    },
    {
      "requirement_id": "A_5.24_REQ_7",
