  "common_mistakes": {
    "description": "Top 3 mistakes organizations make with access restrictions",
    "mistakes": [
      {
        "rank": 1,
        "mistake": "Access not removed when personnel leave",
        "description": "Departed employees retain system and data access",
        "root_cause": [
          "No formalized leaver process",
          "Forgotten access requests",
          "Unclear responsibility",
          "Legacy systems overlooked",
          "Notification delays"
        ],
        "impact": "Former employee access risk, data breach potential, regulatory violation",
        "prevention": [
          "Formal leaver process required",
          "Checklist of systems to remove access",
          "HR notification to IT",
          "Verification of removal",
          "Regular access audits"
        ],
        "requirement": "Access must be removed promptly upon departure"
      },
      {
        "rank": 2,
        "mistake": "Access not aligned with classification",
        "description": "Access policy and classification policy mismatch",
        "root_cause": [
          "Policies developed independently",
          "No cross-reference",
          "Policies not updated together",
          "Implementation gaps",
          "No oversight"
        ],
        "impact": "Sensitive data accessible to unauthorized personnel, data breach risk",
        "prevention": [
          "Integrate policies",
          "Map classification to access",
          "Verify alignment",
          "Use RBAC to enforce",
          "Monitor for compliance"
        ]
      },
      {
        "rank": 3,
        "mistake": "Document version control issues",
        "description": "Policy not current or version controlled",
        "root_cause": [
          "No version control process",
          "No review schedule",
          "Multiple conflicting versions",
          "Comments left in documents",
          "No approval process"
        ],
        "impact": "Inconsistent implementation, audit findings, confusion about requirements",
        "prevention": [
          "Implement version control",
          "Annual review schedule",
          "Single approved version",
          "Remove draft comments",
          "Document approval"
