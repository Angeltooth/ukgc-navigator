    "control_number": "A 8.32",
    "control_title": "Change Management",
    "control_type": "Preventive control",
    "control_purpose": "To preserve information security when executing changes to information processing facilities and information systems through formal change management procedures",
    "control_objective": "Establish and implement formal change management procedures ensuring all changes are assessed for security impact, approved, tested, and documented before implementation"
  },
  "iso_27001_definition": {
    "official_text": "Changes to information processing facilities and information systems should be subject to change management procedures.",
    "key_requirements": [
      "Change management procedures established and documented",
      "All changes subject to formal review and approval",
      "Impact assessment for all changes",
      "Risk assessment of security implications",
      "Authorization controls enforced",
      "Testing of changes before implementation",
      "Change communication to stakeholders",
      "Emergency procedures for urgent changes",
      "Post-implementation review and monitoring",
      "Documentation and record keeping",
      "Rollback procedures for failed changes"
    ]
  },
  "control_purpose_detail": {
    "purpose": "Preventive control ensuring changes do not introduce security vulnerabilities or operational disruptions through formal evaluation and approval",
    "scope": [
      "Changes to information processing facilities",
      "Changes to information systems",
      "Changes to network infrastructure",
      "Software updates and patches",
      "Configuration changes",
      "Security policy changes",
      "Access control changes",
      "Physical security changes",
      "Process and procedure changes"
    ],
    "key_outcome": "All changes are evaluated for security and operational impact, approved by appropriate authorities, tested to ensure effectiveness, and documented for audit trail and accountability"
  },
