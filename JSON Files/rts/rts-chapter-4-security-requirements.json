  "chapter_overview": {
    "chapter_number": 4,
    "chapter_title": "Remote Gambling and Software Technical Standards (RTS) Security Requirements",
    "purpose": "To ensure customers are not exposed to unnecessary security risks by choosing to participate in remote gambling",
    "basis": "Security requirements based on relevant sections of Annex A to ISO/IEC 27001:2022 standard"
  },
  "critical_systems": {
    "description": "The Commission has highlighted those systems that are most critical to achieving the Commission's aims. The security standards apply to these critical systems:",
    "systems": [
      {
        "system_id": "CRIT_SYS_1",
        "system_type": "Sensitive Customer Information Systems",
        "description": "Electronic systems that record, store, process, share, transmit or retrieve sensitive customer information",
        "examples": [
          "Credit/debit card details",
          "Authentication information",
          "Customer account balances"
        ]
      },
      {
        "system_id": "CRIT_SYS_2",
        "system_type": "Random Number Generation Systems",
        "description": "Electronic systems that generate, transmit, or process random numbers used to determine the outcome of games or virtual events",
        "purpose": "Ensure game integrity and fairness"
      },
      {
        "system_id": "CRIT_SYS_3",
        "system_type": "Game State and Results Storage",
        "description": "Electronic systems that store results or the current state of a customer's gamble",
        "purpose": "Maintain game integrity and enable dispute resolution"
      },
      {
        "system_id": "CRIT_SYS_4",
        "system_type": "System Access Points",
        "description": "Points of entry to and exit from the above systems (other systems that are able to communicate directly with core critical systems)",
        "purpose": "Control and monitor access to critical systems"
      },
      {
        "system_id": "CRIT_SYS_5",
        "system_type": "Communication Networks",
        "description": "Communication networks that transmit sensitive customer information",
        "purpose": "Protect customer data in transit"
      }
    ]
  },
